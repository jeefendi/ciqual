<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="com.tn.ciqual">
		<jta-data-source>java:/ciqualDS</jta-data-source>
		<class>com.tn.ciqual.model.Food</class>
		<class>com.tn.ciqual.model.FoodGroup</class>
		<class>com.tn.ciqual.model.Nutrient</class>
		<class>com.tn.ciqual.model.NutritiveValue</class>
		<class>com.tn.ciqual.model.NutritiveValueId</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>
